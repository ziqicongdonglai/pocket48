/* 顶部部分 */
.titlebar_top {
  justify-content: space-between;
  color: #4b4b4b;
}
.titlebar_top .titlebar_cancel {
  width: 155rpx;
  display: flex;
}
.titlebar_top .titlebar_cancel image {
  width: 45rpx;
  height: 45rpx;
}
.titlebar_top .titlebar_title {
  color: #000;
  font-weight: 500;
  font-size: 32rpx;
}
.titlebar_top .titlebar_right_features {
  display: flex;
  width: 175rpx;
}
/* 轮播图 */
.head_swiper {
  width: 100%;
  height: 400rpx;
  overflow: hidden;
}
.head_swiper .top-img {
  width: 100%;
  height: 400rpx;
}
/* 演唱会 */
.middle_feature_show {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding-left: 20rpx;
  background-color: #fff;
  margin: 10rpx 0;
  color: #8c8c8c;
  height: 120rpx;
}
.middle_feature_show image {
  width: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;
}
/* 唱片 */
.middle_feature_cd {
  display: flex;
  padding: 0 20rpx;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
  margin: 10rpx 0;
  color: #8c8c8c;
  height: 120rpx;
  /* 更多 */
}
.middle_feature_cd .feature_head {
  display: flex;
  align-items: center;
}
.middle_feature_cd .feature_head image {
  width: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;
}
.middle_feature_cd .feature_more {
  width: 100rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  color: #8c8c8c;
  border: 2rpx solid #8c8c8c;
  border-radius: 30rpx;
}
/* 商品列表 */
.goods_list {
  display: flex;
  flex-wrap: wrap;
  padding: 0 10rpx;
}
.goods_list .goods_item {
  display: flex;
  flex-direction: column;
  background-color: #fff;
  width: 361rpx;
  height: 521rpx;
  justify-content: flex-start;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}
.goods_list .goods_item image {
  width: 361rpx;
  height: 361rpx;
  align-items: center;
}
.goods_list .goods_item .goods_money {
  margin-top: 20rpx;
  color: #e05272;
}
.goods_list .goods_item:nth-of-type(2n) {
  margin-right: 0;
}
