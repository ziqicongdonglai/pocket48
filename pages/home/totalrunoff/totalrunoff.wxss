/* 顶部部分 */
.titlebar_top .titlebar_cancel {
  width: 155rpx;
  display: flex;
}
.titlebar_top .titlebar_cancel image {
  width: 45rpx;
  height: 45rpx;
  padding-right: 20rpx;
}
.titlebar_top .titlebar_title {
  color: #000;
  font-weight: 500;
  font-size: 32rpx;
  width: 330rpx;
  display: block;
  justify-content: none;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: break-all;
}
.mt {
  margin-top: 105rpx;
}
/* 顶部图片及票数区域 */
.total_runoff_info {
  background-size: 250%;
  background-position: left top;
  height: 450rpx;
  /* 顶部介绍按钮文字 */
}
.total_runoff_info .introduce_text {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 20rpx;
}
.total_runoff_info .total_runoff_introduce_text {
  text-align: center;
  color: #fff;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  background-color: #bd97fa;
  margin-top: 20rpx;
}
/* 票数情况 */
.vote_number_info {
  display: flex;
  justify-content: space-around;
  background-color: #fff;
  padding: 20rpx 0;
}
