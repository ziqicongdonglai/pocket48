/* 导航栏 */
.navbar {
  width: 100%;
  display: flex;
  justify-content: space-between;
  padding: 0 30rpx;
}
.navbar .item {
  font-size: 32rpx;
}
.navbar image {
  width: 45rpx;
  height: 45rpx;
  margin-top: 100rpx;
}
.member_group {
  margin-bottom: 15rpx;
  /* 每组顶部标题 */
