<view>
    <!-- 底部tabBar -->
    <tabbar tabbar="{{tabbar}}"></tabbar>
    <!-- 标签页导航 -->
    <view>
        <!-- 导航条 -->
        <view class="head">
            <view class="navbar">
                <text wx:for="{{navbar}}" data-idx="{{index}}" class="item {{currentTab==index ? 'active' : ''}}" wx:key="unique" bindtap="navbarTap">
                    {{item}}
                </text>
            </view>
        </view>
        <!-- 滑动的主体部分 -->
        <swiper class="bar_swiper" current="{{currentTab}}" duration="200" bindchange="swiperChange" style='height: 2300rpx'>
            <swiper-item>
                <scroll-view style="height: 100%" scroll-y>
                    <!-- 搜索栏 和 右侧的 扫码 领应援力 -->
                    <view class="toprow">
                        <view class="search">
                            <view class="input-wrapper">
                                <image class="searchImg" src="/images/home/home_square_search.png"></image>
                                <input adjust-position placeholder="搜索" confirm-type="search"></input>
                            </view>
                            <view class="top_right">
                                <image src="/images/home/home_square_scanning.png"></image>
                                <image class="gift" src="/images/home/home_nav_gift.png"></image>
                            </view>
                        </view>
                    </view>
                    <!-- 轮播图 -->
                    <view class="head_swiper">
                        <!-- 用来给轮播图来个左右间距 -->
                        <view class="paddinglr">
                            <swiper indicator-dots="true" autoplay="true" interval='2000' indicator-color="rgba(255, 255, 255, .4)" indicator-active-color="#574845" circular="true" style='height: 400rpx'>
                                <swiper-item>
                                    <image class='top-img' mode="aspectFill left" src='https://www.snh48.com/attached/ad/2020-06-08/663048%E6%96%B0%E5%AE%98%E7%BD%91.jpg'></image>
                                </swiper-item>
                                <swiper-item>
                                    <image class='top-img' mode="aspectFill center" src='https://www.snh48.com/attached/ad/2020-06-05/9032211.jpg'></image>
                                </swiper-item>
                                <swiper-item>
                                    <image class='top-img' mode="aspectFill" src='/images/home/startschool.png'></image>
                                </swiper-item>
                                <swiper-item>
                                    <image class='top-img' mode="aspectFill" src='/images/home/czy2020.png'></image>
                                </swiper-item>
                                <swiper-item>
                                    <image class='top-img' mode="aspectFill" src='/images/home/ckkys.png'></image>
                                </swiper-item>
                                <swiper-item>
                                    <image class='top-img' mode="aspectFill" src='/images/home/funnytime.png'></image>
                                </swiper-item>
                            </swiper>
                        </view>
                    </view>
                    <!-- 首页中间功能区 -->
                    <view class="middle_features">
                        <swiper indicator-dots="true" style='height: 200rpx'>
                            <swiper-item>
                                <view class="features_group">
                                    <view class="features">
                                        <image src="/images/home/mine_mc.png" class="item_icon"></image>
                                        <text>应援力兑换</text>
                                    </view>
                                    <view class="features">
                                        <image src="/images/home/mine_mc.png" class="item_icon"></image>
                                        <text>云握手</text>
                                    </view>
                                    <view class="features">
                                        <image src="/images/home/mine_mc.png" class="item_icon"></image>
                                        <text>演出</text>
                                    </view>
                                    <view class="features">
                                        <image src="/images/home/mine_mc.png" class="item_icon"></image>
                                        <text>偶像</text>
                                    </view>
                                </view>
                            </swiper-item>
                            <swiper-item>
                                <view class="features_group">
                                    <view class="features">
                                        <image src="/images/home/mine_trip.png" class="item_icon"></image>
                                        <text>行程</text>
                                    </view>
                                    <view class="features">
                                        <image src="/images/home/mine_rank.png" class="item_icon"></image>
                                        <text>榜单</text>
                                    </view>
                                    <view class="features">
                                        <image src="/images/home/mine_mc.png" class="item_icon"></image>
                                        <text>音乐</text>
                                    </view>
                                    <view class="features">
                                        <image src="/images/home/mine_mc.png" class="item_icon"></image>
                                        <text>视频</text>
                                    </view>
                                </view>
                            </swiper-item>
                            <swiper-item>
                                <view class="features_group">
                                    <view class="features">
                                        <image src="/images/home/mine_mc.png" class="item_icon"></image>
                                        <text>电台</text>
                                    </view>
                                    <view class="features">
                                        <image src="/images/home/mine_mc.png" class="item_icon"></image>
                                        <text>MC话题</text>
                                    </view>
                                    <view class="features">
                                        <image src="/images/home/message.png" class="item_icon"></image>
                                        <text>消息盒子</text>
                                    </view>
                                    <view class="features">
                                        <image src="/images/home/mine_mc.png" class="item_icon"></image>
                                        <text>网络MVP</text>
                                    </view>
                                </view>
                            </swiper-item>
                        </swiper>
                    </view>
                    <!-- 热门公演 -->
                    <view class="hot_show">
                        <view class="home_title">
                            <image class="title_icon" src="/images/home/home_square_hot.png"></image>
                            <text>热门公演</text>
                            <image class="title_icon" src="/images/home/home_square_more.png"></image>
                        </view>
                        <view class="content_item_group">
                            <scroll-view class="scroll-wrap" scroll-x style="width: 100%">
                                <view class="content_item" wx:for="{{showlist}}">
                                    <view class="content">
                                        <image src="{{item.showUrl}}"></image>
                                    </view>
                                </view>
                            </scroll-view>
                        </view>
                    </view>
                    <!-- 应援榜 -->
                    <view class="yinyuan">
                        <view class="home_title">
                            <image class="title_icon" src="/images/home/home_square_rankings.png"></image>
                            <text>应援榜</text>
                            <image class="title_icon" src="/images/home/home_square_more.png"></image>
                        </view>
                        <view class="rankings">
                            <view class="ranking_item" wx:for="{{rankinglist}}">
                                <view class="head">
                                    <view class="head_img" style="border: 2rpx solid {{item.headcolor}}">
                                        <image src="{{item.imgUrl}}"></image>
                                    </view>
                                    <image class="rank_img" src="{{item.rankimg}}"></image>
                                </view>
                                <text>{{item.memberName}}</text>
                            </view>
                        </view>
                    </view>
                    <!-- 今日有缘成员 生日祝福 -->
                    <view class="top_bottom">
                        <image src="/images/home/destined_idol.png"></image>
                        <image src="/images/home/birthdaywishes.png"></image>
                    </view>
                    <!-- 正在直播 -->
                    <view class="live">
                        <view class="home_title">
                            <image class="title_icon" src="/images/home/home_square_live.png"></image>
                            <text>正在直播</text>
                            <image class="title_icon" src="/images/home/home_square_more.png"></image>
                        </view>
                        <view class="memberblive">
                            <scroll-view class="scroll-wrap" scroll-x style="width: 100%">
                                <view class="live_item" wx:for="{{livinglist}}">
                                    <image class="live_bg" src="/images/home/user_photo_bg.png"></image>
                                    <view class="live_head center_item">
                                        <div class="head_img">
                                            <image src="{{item.imgUrl}}"></image>
                                        </div>
                                        <text>{{item.memberName}}</text>
                                        <!-- 队名 -->
                                        <view class="team" style="background-color: {{item.teamColor}}">
                                            {{item.team}}
                                        </view>
                                        <!-- 当前的直播名称 -->
                                        <text class="live_title">{{item.liveTitle}}</text>
                                    </view>
                                </view>
                            </scroll-view>
                        </view>
                    </view>
                </scroll-view>
            </swiper-item>
            <swiper-item>创造营2020</swiper-item>
        </swiper>
    </view>
</view>