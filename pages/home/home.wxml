<view>
    <!-- 底部tabBar -->
    <tabbar tabbar="{{tabbar}}"></tabbar>
    <!-- 标签页导航 -->
    <view>
        <!-- 导航条 -->
        <view class="navbar">
            <text wx:for="{{navbar}}" data-idx="{{index}}" class="item {{currentTab==index ? 'active' : ''}}" wx:key="unique" bindtap="navbarTap">
                {{item}}
            </text>
        </view>
        <!-- 滑动的主体部分 -->
        <swiper class="bar_swiper" current="{{currentTab}}" duration="200" bindchange="swiperChange" style='height: 2000rpx'>
            <swiper-item>
                <scroll-view style="height: 100%" scroll-y>
                    <!-- 搜索栏 和 右侧的 扫码 领应援力 -->
                    <view class="toprow">
                        <view class="search">
                            <view class="input-wrapper">
                                <image class="searchImg" src="/images/home/home_square_search.png"></image>
                                <input adjust-position placeholder="搜索" confirm-type="search"></input>
                            </view>
                            <view class="top_right">
                            <image src="/images/home/home_square_scanning.png"></image>
                            <image class="gift" src="/images/home/home_nav_gift.png"></image>
                        </view>
                        </view>
                    </view>
                    <!-- 轮播图 -->
                    <view class="head_swiper">
                        <!-- 用来给轮播图来个左右间距 -->
                        <view class="paddinglr">
                            <swiper indicator-dots="true" autoplay="true" interval='2000' indicator-color="rgba(255, 255, 255, .4)" indicator-active-color="#574845" circular="true" style='height: 400rpx'>
                                <swiper-item>
                                    <image class='top-img' mode="aspectFill left" src='https://www.snh48.com/attached/ad/2020-06-08/663048%E6%96%B0%E5%AE%98%E7%BD%91.jpg'></image>
                                </swiper-item>
                                <swiper-item>
                                    <image class='top-img' mode="aspectFill center" src='https://www.snh48.com/attached/ad/2020-06-05/9032211.jpg'></image>
                                </swiper-item>
                                <swiper-item>
                                    <image class='top-img' mode="aspectFill" src='/images/home/startschool.png'></image>
                                </swiper-item>
                                <swiper-item>
                                    <image class='top-img' mode="aspectFill" src='/images/home/czy2020.png'></image>
                                </swiper-item>
                                <swiper-item>
                                    <image class='top-img' mode="aspectFill" src='/images/home/ckkys.png'></image>
                                </swiper-item>
                                <swiper-item>
                                    <image class='top-img' mode="aspectFill" src='/images/home/funnytime.png'></image>
                                </swiper-item>
                            </swiper>
                        </view>
                    </view>
                    <!-- 首页中间功能区 -->
                    <view class="middle_features">
                        <swiper></swiper>
                    </view>
                    <!-- 热门公演 -->
                    <view class="hot_show">功能</view>
                    <!-- 应援榜 -->
                    <view class="yinyuan">应援榜</view>
                    <!-- 今日有缘成员 生日祝福 -->
                    <view class="top_bottom"></view>
                </scroll-view>
            </swiper-item>
            <swiper-item>创造营2020</swiper-item>
        </swiper>
    </view>
</view>