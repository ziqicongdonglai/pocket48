/* 顶部部分 */
.titlebar_top {
  justify-content: space-between;
  color: #4b4b4b;
}
.titlebar_top .titlebar_cancel {
  width: 155rpx;
  display: flex;
}
.titlebar_top .titlebar_cancel image {
  width: 45rpx;
  height: 45rpx;
}
.titlebar_top .titlebar_title {
  color: #000;
  font-weight: 500;
  font-size: 32rpx;
}
.titlebar_top .titlebar_right_features {
  display: flex;
  width: 175rpx;
  justify-content: center;
  align-items: center;
}
.titlebar_top .titlebar_right_features image {
  width: 45rpx;
  height: 45rpx;
  margin: 0 10rpx;
}
.mt {
  margin-top: 100rpx;
}
/* 行程列表 */
.trip_list {
  background-color: #fff;
  /* 月份 */
  /* 每天的各个不同的行程 */
}
.trip_list .month_title {
  background-color: #fff;
  padding: 20rpx 0;
  border-top: 2rpx solid #ccc;
  border-bottom: 2rpx solid #ccc;
}
.trip_list .month_title .month {
  width: 120rpx;
  text-align: center;
  font-size: 36rpx;
  color: #888;
  border-left: 7rpx solid #888;
}
.trip_list .trip {
  color: #999;
  display: flex;
  align-items: center;
  padding: 20rpx 0 20rpx 0;
  margin-left: 20rpx;
  border-bottom: 2rpx solid #ccc;
  /* 日期 几号 */
  /* 活动详情 */
}
.trip_list .trip .date {
  padding-right: 20rpx;
  color: #adadad;
}
.trip_list .trip .date .date_info {
  font-size: 46rpx;
}
.trip_list .trip .date .equal_now {
  font-size: 28rpx;
}
.trip_list .trip .activity_info {
  display: flex;
  flex-direction: column;
  /* 活动标题 */
  /* 活动的标签 */
  /* 活动描述 */
}
.trip_list .trip .activity_info .activity_title {
  color: #888;
}
.trip_list .trip .activity_info .tags {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  color: #888;
}
.trip_list .trip .activity_info .tags .tag {
  padding: 5rpx 10rpx;
  text-align: center;
  border: 2rpx solid #888;
  border-radius: 5rpx;
  font-size: 22rpx;
  margin-right: 10rpx;
}
.trip_list .trip .activity_info .activity_explain {
  font-size: 28rpx;
  color: #bfbfbf;
}
.trip_list .trip:last-child {
  border-bottom: none;
}
