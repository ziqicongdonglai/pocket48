/* 顶部部分 */
.titlebar_top {
  justify-content: space-between;
  color: #4b4b4b;
}
.titlebar_top .titlebar_cancel {
  width: 155rpx;
  display: flex;
}
.titlebar_top .titlebar_cancel image {
  width: 45rpx;
  height: 45rpx;
}
.titlebar_top .titlebar_title {
  color: #000;
  font-weight: 500;
  font-size: 32rpx;
}
.titlebar_top .titlebar_right_features {
  display: flex;
  width: 175rpx;
  justify-content: center;
  align-items: center;
}
.titlebar_top .titlebar_right_features image {
  width: 45rpx;
  height: 45rpx;
  margin: 0 10rpx;
}
.mt {
  margin-top: 100rpx;
}
/* 底部评论 */
.comment_gift {
  background-color: #fff;
  position: fixed;
  width: 100%;
  bottom: 0;
  z-index: 99;
  display: flex;
  justify-content: space-around;
  padding: 20rpx 0;
  align-items: center;
}
.comment_gift .input_text {
  border-radius: 20rpx;
  border: 2rpx solid #d4d4d4;
  width: 550rpx;
  height: 60rpx;
}
.comment_gift .input_text .input_text {
  width: 550rpx;
  height: 60rpx;
}
.comment_gift .bottom_right image {
  width: 60rpx;
  height: 60rpx;
  margin-right: 10rpx;
}
/* 右侧更多 到留言板 */
.arrow_more {
  width: 80rpx;
  height: 70rpx;
  border-width: 2rpx;
  border-style: solid;
  border-color: #bbb;
  border-radius: 80rpx 0 0 80rpx;
  background-color: #fff;
  position: fixed;
  top: 500rpx;
  right: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 99;
}
.arrow_more image {
  width: 45rpx;
  height: 45rpx;
}
