/* 图片不要默认宽高 */
image {
  width: 0;
  height: 0;
}

/* 居中 */
.center_item {
  text-align: center;
  align-items: center;
  justify-content: center;
}
.head {
  display: flex;
  width: 100%;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background: white;
  /* 顶部导航栏固定 */
  position: fixed;
  top: 0;
  /* 设置元素的堆叠顺序 */
  z-index: 999;
}
/* 导航栏 */
.navbar {
  /* flex: none; */
  background: #fff;
  font-size: 30rpx;
  color: #bbb;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: -120rpx;
  /* position: fixed; */
}
.navbar .item {
  font-size: 36rpx;
  position: relative;
  /* flex: auto; */
  text-align: center;
  line-height: 100rpx;
  /* height: 80rpx; */
}
.navbar .item:last-child {
  margin-right: 0;
}
.navbar .item.active {
  font-weight: 700;
  color: #7766e6;
  border-bottom: 6rpx solid #7766e6;
}
