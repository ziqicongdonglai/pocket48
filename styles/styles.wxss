/* 解决因为导航栏固定 带来的swiper-item内容看不见 */
.navbar_mt {
  margin-top: 100rpx;
}
/* 和上一个样式类似 */
.mt {
  margin-top: 90rpx;
}

/* 主页 标题栏 热门公演 应援榜 正在直播 */
.home_title {
  padding: 20rpx 0 10rpx 20rpx;
  display: flex;
  align-items: center;
  font-weight: 700;
}
.home_title .title_icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

/* 横向滚动 */
.scroll-wrap {
  height: 260rpx;
  white-space: nowrap;
}

/* 队名 大小及背景色 */
.team {
  color: #fff;
  height: 25rpx;
  line-height: 25rpx;
  padding: 0 10rpx;
  margin-top: 5rpx;
  font-size: 22rpx;
  background-color: #87ceeb;
  border-radius: 8rpx;
}

/* 未读消息数量样式 */
.infnumber {
  height: 40rpx;
  line-height: 40rpx;
  background-color: #ff0000;
  color: #f2f2f2;
  font-size: 26rpx;
  text-align: center;
  border-radius: 20rpx;
  padding: 0 10rpx;
}
/* 未读消息小于10条 */
.number_radius {
  width: 20rpx;
}
.number_hide {
  display: none;
}

/* 顶部标题部分 */
.titlebar_top {
  height: 100rpx;
  background-color: #fff;
  display: flex;
  flex-direction: row;
  font-size: 28rpx;
  padding: 0 20rpx;
  align-items: center;
  text-align: center;
  margin-bottom: 15rpx;
  position: fixed;
  top: 0rpx;
  width: 100%;
  z-index: 99;
}
.titlebar_top .titlebar_cancel {
  width: 155rpx;
  display: flex;
  width: 290rpx;
}
.titlebar_top .titlebar_cancel image {
  width: 45rpx;
  height: 45rpx;
}
.titlebar_top .titlebar_title {
  color: #000;
  font-weight: 500;
  font-size: 32rpx;
  display: flex;
  justify-content: center;
}

/* 列表的每一项的顶部标题 如 鸡腿详情 成长值记录 个人资料 账号绑定等等 */
.item_list_title {
  color: #848484;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #f6f6f6;
  padding-left: 20rpx;
}

/* 创造营页面 */
/* 头像 */
.avatar {
  width: 5rem;
  height: 5rem;
  overflow: hidden;
  border-radius: 50%;
  position: relative;
  box-shadow: 10rpx 10rpx 32rpx #b4006e33;
  -webkit-box-shadow: -10rpx 10rpx 32rpx #b4006e33;
  border: 4rpx solid #feaecf;
}

/* 为她助力按钮 */
.member_btn {
  color: #fff !important;
  background: -webkit-linear-gradient(left, #ff7595, #ff98b0);
  border-radius: 2rem;
  /* padding: 13rpx 33rpx; */
  display: inline-block;
  -webkit-box-shadow: -10rpx 10rpx 32rpx #fca7bb80;
}

/* 链接（网页链接） */
.anchor {
  color: #8876ec;
}

/* 粉丝发帖（最新）部分 等级vip徽章等没有数据的 */
.img_hide {
  width: 0 !important;
  height: 0 !important;
}