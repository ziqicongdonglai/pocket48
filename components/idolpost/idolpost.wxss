.idol_post_item .idol_post_top .head_img {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.idol_post_item .idol_post_top .post_top_right {
  display: flex;
  flex-direction: column;
}
.idol_post_item .idol_post_top .post_top_right .name_team {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.idol_post_item .idol_post_top .post_top_right .name_team .team {
  margin-left: 20rpx;
}
.idol_post_item .idol_post_top .post_top_right .date_time {
  font-size: 24rpx;
  color: #bbb;
}
.idol_post_item .idol_post_content {
