}
.idol_post_item .idol_post_content .post_content_text {
  line-height: 60rpx;
}
.idol_post_item .idol_post_content .post_content_img {
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
  align-items: center;
  width: 100%;
}
.idol_post_item .idol_post_content .post_content_img .img_box {
  width: 30%;
  height: 214rpx;
  overflow: hidden;
  border-radius: 15rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}
.idol_post_item .idol_post_content .post_content_img .img_box image {
  width: 100%;
  height: 300rpx;
}
.idol_post_item .idol_post_bottom {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #bbb;
  align-items: center;
  margin-top: 20rpx;
  /* 浏览次数 */
}
.idol_post_item .idol_post_bottom .bottom_right {
  display: flex;
}
.idol_post_item .idol_post_bottom .bottom_right .right_item {
  display: flex;
  flex-direction: row;
  margin-right: 20rpx;
  align-items: center;
}
.idol_post_item .idol_post_bottom .bottom_right .right_item image {
  width: 40rpx;
  height: 40rpx;
}
.idol_post_item .idol_post_bottom .bottom_right .right_item:last-child {
  margin-right: 0;
}
